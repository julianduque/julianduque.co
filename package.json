{
    "name": "julianduque.co",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "license": "MIT",
    "scripts": {
        "build": "pnpm run build:css && pnpm run build:js && pnpm run build:eleventy",
        "build:css": "postcss assets/css/site.css -o assets/css/site-build.css && postcss assets/css/prism.css -o assets/css/prism-build.css",
        "build:eleventy": "eleventy",
        "build:js": "rollup -c scripts/rollup.config.js",
        "dev": "concurrently \"pnpm:dev:*\"",
        "dev:css:prism": "postcss assets/css/prism.css -o assets/css/prism-build.css --watch",
        "dev:css:site": "postcss assets/css/site.css -o assets/css/site-build.css --watch",
        "dev:eleventy": "eleventy --serve",
        "dev:js": "rollup -c scripts/rollup.config.js -w",
        "lint": "pnpm run lint:markdown && pnpm run lint:js",
        "lint:markdown": "pnpm dlx markdownlint-cli2 \"./content/**/*.md\"",
        "lint:js": "eslint \"**/*.js\"",
        "postinstall": "husky",
        "precommit": "pnpm run prettier && pnpm run lint",
        "prettier": "prettier --write \"**/*.{css,html,js,json,md,njk,yaml,yml}\"",
        "prettier:verify": "prettier --list-different \"**/*.{css,html,js,json,md,njk,yaml,yml}\"",
        "prettier:markdown": "prettier --write \"content/**/*.md\"",
        "prettier:njk": "prettier --write \"**/*.njk\""
    },
    "dependencies": {
        "@11ty/eleventy": "^3.1.1",
        "@11ty/eleventy-plugin-rss": "^2.0.3",
        "@rollup/plugin-replace": "^6.0.1",
        "autoprefixer": "^10.4.20",
        "crypto-js": "^4.2.0",
        "cssnano": "^7.0.6",
        "date-fns": "^4.1.0",
        "dotenv": "^16.4.7",
        "eleventy-plugin-toc": "^1.1.5",
        "html-minifier": "^4.0.0",
        "jsdom": "^26.1.0",
        "markdown-it": "^14.1.0",
        "markdown-it-anchor": "^9.2.0",
        "postcss": "^8.5.1",
        "postcss-cli": "^11.0.0",
        "rollup": "^4.42.0",
        "rollup-plugin-postcss": "^4.0.2",
        "sharp": "^0.34.2",
        "shelljs": "^0.10.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.17.0",
        "@prettier/plugin-xml": "^3.4.1",
        "@rollup/plugin-terser": "^0.4.4",
        "concurrently": "^9.1.0",
        "eslint": "^9.17.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-inclusive-language": "^2.2.1",
        "husky": "^9.1.7",
        "markdownlint": "^0.38.0",
        "markdownlint-cli2": "^0.18.1",
        "prettier": "^3.4.2",
        "prettier-plugin-embed": "^0.5.0",
        "tailwindcss": "^3.4.17"
    },
    "volta": {
        "node": "22.16.0",
        "pnpm": "9.15.0"
    },
    "packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac"
}
